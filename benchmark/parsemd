#!/usr/bin/env node
const fs = require('fs');
// const util = require('util');
const program = require('commander');
const { MdFile } = require('../markdata.min.js');

let filePath;
program
  .arguments('<path>')
  .action((path) => {
    filePath = path;
  })
  .parse(process.argv);

program.parse(process.argv);

const fileText = fs.readFileSync(filePath, 'utf8');
const mdFile = new MdFile(fileText);
console.log(mdFile.toTree());
